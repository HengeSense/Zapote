.header
  %h2 Statistics for #{ @user.full_name }

.content
  .big-and-pretty
    %p Total Questions Right: #{ @user.total_questions_right }
    
    %p Total Questions Wrong: #{ @user.total_questions_wrong }

    %p Average score: #{ @user.average_score }%

    %p Total Tests Taken: #{ @user.statistics.count }
  %div{:style => "margin-left: -180px;"}
    = high_chart("week_stats", @h)

.header
  %h2 All Statistics
  
.content
  %table
    %tr
      %th Quiz Name
      %th Score
      %th Date

    - @user.statistics.each do |statistic|
      %tr
        %td= statistic.quiz.title
        %td= statistic.percent
        %td= readable_date(statistic.created_at.to_date)