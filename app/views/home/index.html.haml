.header
  %h2 Welcome back #{current_user.full_name}!

.content
  %h2 All Quizzes
  %table
    %tr
      %th Title
      %th Number of Questions
      %th
    - Quiz.all.each do |quiz|
      %tr
        %td= quiz.title
        %td= quiz.questions.count
        %td
          = link_to "Take Quiz", take_url(quiz)